{
  "name": "streamflow-music-app",
  "version": "1.0.0",
  "description": "iOS-inspired music streaming progressive web app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run copy-files && npm run minify",
    "copy-files": "cp -r public/* build/",
    "minify": "terser public/app.js -o build/app.js && terser public/player.js -o build/player.js && terser public/api-manager.js -o build/api-manager.js && terser public/ui-controller.js -o build/ui-controller.js && terser public/database.js -o build/database.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "keywords": [
    "music",
    "streaming",
    "pwa",
    "ios",
    "youtube",
    "soundcloud",
    "audius"
  ],
  "author": "StreamFlow Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "axios": "^1.4.0",
    "ytdl-core": "^4.11.4",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "terser": "^5.17.1",
    "eslint": "^8.41.0",
    "jest": "^29.5.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/streamflow-music-app"
  },
  "bugs": {
    "url": "https://github.com/yourusername/streamflow-music-app/issues"
  },
  "homepage": "https://github.com/yourusername/streamflow-music-app#readme"
}
